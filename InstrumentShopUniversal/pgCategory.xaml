<Page
    x:Class="InstrumentShopUniversal.pgCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InstrumentShopUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="Instrument Shop" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48"/>
        <TextBlock x:Name="lblCategoryDescription" HorizontalAlignment="Left" Margin="40,166,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24"/>
        <TextBlock x:Name="lblCategoryName" HorizontalAlignment="Left" Margin="41,100,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <ListBox x:Name="lstInstruments" HorizontalAlignment="Center" Height="226" VerticalAlignment="Top" RenderTransformOrigin="0.379,0.511" Width="352" Margin="0,314,0,0" DoubleTapped="lstInstruments_DoubleTapped"/>

    </Grid>
</Page>
